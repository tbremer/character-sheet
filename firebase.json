{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/authenticate",
        "destination": "/authenticate.html"
      },
      {
        "source": "/~",
        "destination": "/home.html"
      },
      {
        "source": "/api/hello",
        "function": "hello"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
